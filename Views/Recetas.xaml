<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ElBarDePili.Models"
             xmlns:viewmodel="clr-namespace:ElBarDePili.ViewModels"
             x:Class="ElBarDePili.Views.Recetas"
             x:DataType="viewmodel:RecetasViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <CollectionView ItemsSource="{Binding Recetas}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Receta">
                    <Label Text="{Binding Nombre}"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
    
</ContentPage>