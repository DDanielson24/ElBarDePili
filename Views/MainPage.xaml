<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ElBarDePili.ViewModels"
             x:Class="ElBarDePili.Views.MainPage"
             x:DataType="viewmodel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Label 
                Text="El Bar de Pili"
                FontSize="30"
                FontAttributes="Bold"
                TextColor="Black"
                Background="Pink"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Margin="40,40,40,0"/>
            
            <Image Source="cocinahome.jpg"/>
            
            <Button
                Text="Recetas"
                Margin="40,0,40,0"
                Command="{Binding GoToRecetasSectionCommand}"/>
            
            <Button
                Text="Ingredientes"
                Margin="40,0,40,0"
                Command="{Binding GoToIngredientesSectionCommand}"/>
            
            <Button
                Text="Configuración"
                Margin="40,0,40,0"
                Command="{Binding GoToConfiguracionSectionCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
